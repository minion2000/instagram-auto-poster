generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model InstagramPost {
  id          String   @id @default(cuid())
  caption     String
  mediaUrl    String
  scheduleFor DateTime
  status      String   @default("PENDING") // PENDING, POSTED, FAILED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  error       String?
}

model InstagramAuth {
  id           String   @id @default("instagram")
  accessToken  String
  userId       String
  expiresAt    DateTime
  refreshToken String?
  updatedAt    DateTime @updatedAt
}
